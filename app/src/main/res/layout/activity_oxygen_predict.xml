<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.OxygenPredictActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/toolbar_background"
            app:titleTextColor="@android:color/white"/>

    </com.google.android.material.appbar.AppBarLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/margin_55dp"
        android:scrollbars="none">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/padding_20dp">

            <androidx.cardview.widget.CardView
                android:id="@+id/cardOxygenPredictFirstTier"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_16dp"
                android:layout_marginEnd="@dimen/margin_16dp"
                android:layout_marginTop="@dimen/margin_20dp"
                app:cardCornerRadius="@dimen/corner_radius_10dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent">

                <RelativeLayout
                    android:id="@+id/layoutOxygenPredictFirstTier"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/tvOxygenTwentyFourHours"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/margin_8dp"
                        android:layout_centerVertical="true"
                        android:layout_toStartOf="@+id/tvOxygenPercentFirstTier"
                        android:text="@string/label_twenty_four_hours_oxygen"
                        android:textSize="@dimen/text_size_20sp"
                        android:textColor="@android:color/black"
                        android:fontFamily="@font/montserrat_regular"
                        android:background="@android:color/transparent"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:layout_alignParentStart="true"/>

                    <TextView
                        android:id="@+id/tvOxygenPercentFirstTier"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/margin_8dp"
                        android:layout_centerVertical="true"
                        android:text="@string/label_no_percent_predict"
                        android:textSize="@dimen/text_size_20sp"
                        android:textColor="@android:color/black"
                        android:fontFamily="@font/montserrat_bold"
                        android:background="@android:color/transparent"
                        android:maxLines="1"
                        android:layout_alignParentEnd="true"/>

                </RelativeLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cardOxygenPredictSecondTier"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_16dp"
                android:layout_marginEnd="@dimen/margin_16dp"
                android:layout_marginTop="@dimen/margin_20dp"
                app:cardCornerRadius="@dimen/corner_radius_10dp"
                app:layout_constraintTop_toBottomOf="@+id/cardOxygenPredictFirstTier"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent">

                <RelativeLayout
                    android:id="@+id/layoutOxygenPredictSecondTier"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/tvOxygenFourtyEightHours"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/margin_8dp"
                        android:layout_centerVertical="true"
                        android:layout_toStartOf="@+id/tvOxygenPercentSecondTier"
                        android:text="@string/label_fourty_eight_hours_oxygen"
                        android:textSize="@dimen/text_size_20sp"
                        android:textColor="@android:color/black"
                        android:fontFamily="@font/montserrat_regular"
                        android:background="@android:color/transparent"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:layout_alignParentStart="true"/>

                    <TextView
                        android:id="@+id/tvOxygenPercentSecondTier"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/margin_8dp"
                        android:layout_centerVertical="true"
                        android:text="@string/label_no_percent_predict"
                        android:textSize="@dimen/text_size_20sp"
                        android:textColor="@android:color/black"
                        android:fontFamily="@font/montserrat_bold"
                        android:background="@android:color/transparent"
                        android:maxLines="1"
                        android:layout_alignParentEnd="true"/>

                </RelativeLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cardOxygenPredictThirdTier"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_16dp"
                android:layout_marginEnd="@dimen/margin_16dp"
                android:layout_marginTop="@dimen/margin_20dp"
                app:cardCornerRadius="@dimen/corner_radius_10dp"
                app:layout_constraintTop_toBottomOf="@+id/cardOxygenPredictSecondTier"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent">

                <RelativeLayout
                    android:id="@+id/layoutOxygenPredictThirdTier"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/tvOxygenSeventyTwoHours"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/margin_8dp"
                        android:layout_centerVertical="true"
                        android:layout_toStartOf="@+id/tvOxygenPercentThirdTier"
                        android:text="@string/label_seventy_two_hours_oxygen"
                        android:textSize="@dimen/text_size_20sp"
                        android:textColor="@android:color/black"
                        android:fontFamily="@font/montserrat_regular"
                        android:background="@android:color/transparent"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:layout_alignParentStart="true"/>

                    <TextView
                        android:id="@+id/tvOxygenPercentThirdTier"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/margin_8dp"
                        android:layout_centerVertical="true"
                        android:text="@string/label_no_percent_predict"
                        android:textSize="@dimen/text_size_20sp"
                        android:textColor="@android:color/black"
                        android:fontFamily="@font/montserrat_bold"
                        android:background="@android:color/transparent"
                        android:maxLines="1"
                        android:layout_alignParentEnd="true"/>

                </RelativeLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cardOxygenPredictFourthTier"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_16dp"
                android:layout_marginEnd="@dimen/margin_16dp"
                android:layout_marginTop="@dimen/margin_20dp"
                app:cardCornerRadius="@dimen/corner_radius_10dp"
                app:layout_constraintTop_toBottomOf="@+id/cardOxygenPredictThirdTier"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent">

                <RelativeLayout
                    android:id="@+id/layoutOxygenPredictFourthTier"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/tvOxygenNinetySixHours"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/margin_8dp"
                        android:layout_centerVertical="true"
                        android:layout_toStartOf="@+id/tvOxygenPercentFourthTier"
                        android:text="@string/label_ninety_six_hours_oxygen"
                        android:textSize="@dimen/text_size_20sp"
                        android:textColor="@android:color/black"
                        android:fontFamily="@font/montserrat_regular"
                        android:background="@android:color/transparent"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:layout_alignParentStart="true"/>

                    <TextView
                        android:id="@+id/tvOxygenPercentFourthTier"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/margin_8dp"
                        android:layout_centerVertical="true"
                        android:text="@string/label_no_percent_predict"
                        android:textSize="@dimen/text_size_20sp"
                        android:textColor="@android:color/black"
                        android:fontFamily="@font/montserrat_bold"
                        android:background="@android:color/transparent"
                        android:maxLines="1"
                        android:layout_alignParentEnd="true"/>

                </RelativeLayout>

            </androidx.cardview.widget.CardView>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>